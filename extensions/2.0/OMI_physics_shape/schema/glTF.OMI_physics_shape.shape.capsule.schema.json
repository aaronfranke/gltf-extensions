{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "glTF.OMI_physics_shape.shape.capsule.schema.json",
    "title": "OMI_physics_shape Capsule Shape",
    "type": "object",
    "description": "Parameters describing a capsule physics shape.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "height": {
            "type": "number",
            "description": "The full height of the capsule shape in meters.",
            "exclusiveMinimum": 0.0,
            "default": 2.0
        },
        "radius": {
            "type": "number",
            "description": "The radius of the capsule in meters.",
            "minimum": 0.0,
            "default": 0.5
        },
        "extensions": { },
        "extras": { }
    }
}
